    <servlet>
        <servlet-name>EditProduct</servlet-name>
        <servlet-class>com.exavalu.servlet.EditProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveProductServlet</servlet-name>
        <servlet-class>com.exavalu.servlet.SaveProductServlet</servlet-class>
